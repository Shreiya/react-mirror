{
  "name": "React-mirror",
  "description": "Smart mirror using ReactJS",
  "version": "0.0.2",
  "style": "css/*.css",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "react"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "babelify": "*",
    "react-intl": "1.2.0",
    "babel-preset-react": "*",
    "jquery": "^2.0",
    "moment": "*",
    "http-server": "^0.8.5",
    "browserify": "^12.0.1",
    "react-css-transition-replace": "^1.0.0",
    "react-bootstrap": "^0.27.3"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.4",
    "concurrent": "^0.3.2",
    "eslint": "^1.9.0",
    "eslint-plugin-react": "^3.8.0",
    "uglifyjs": "^2.3.6",
    "watchify": "^3.6.0"
  },
  "scripts": {
    "build-js": "browserify src/main.js -o static/bundle.js",
    "build-css": "cat css/*.css > static/bundle.css",
    "watch-css": "nodemon --ignore static/ -e css -x \"npm run build-css\"",
    "start": "npm run build-js && npm run build-css && npm run start-server",
    "start-no-ssl": "npm run build && npm run start-server-no-ssl'",    
    "start-server": "node node_modules/http-server/bin/http-server -P 'http://api.openweathermap.org' --ssl -C 'localhost-cert.pem' -K 'localhost-key.pem'",
    "start-server-no-ssl": "node node_modules/http-server/bin/http-server -P 'http://api.openweathermap.org'",
    "dev-watch": "node ./node_modules/concurrently/src/main.js --kill-others \"watchify src/main.js -o static/bundle.js -v\" \"npm run watch-css\" \"npm run start-server\"",
    "dev-watch-no-ssl": "node ./node_modules/concurrently/src/main.js --kill-others \"watchify src/main.js -o static/bundle.js -v\" \"npm run watch-css\" \"npm run start-server-no-ssl\""
  }
}
